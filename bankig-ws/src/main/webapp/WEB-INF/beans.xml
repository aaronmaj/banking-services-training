<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jaxws="http://cxf.apache.org/jaxws"
        xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

        <import resource="classpath:META-INF/cxf/cxf.xml" />

        <jaxws:endpoint 
          id="bankingService"
          implementor="com.banque.services.soap.BanqueWebserviceImpl"
          address="/banking" />
        <bean id ="coreBankingService" class="com.banque.services.core.service.CorebankingService">
                <constructor-arg index="0" ref="jpaClient"/>
                <constructor-arg index="1" ref="jpaCompte"/>
        </bean>
        <bean id="jpaCompte" class="com.banque.services.core.persistence.jpa.JpaCompteDao"/>
        <bean id="jpaClient" class="com.banque.services.core.persistence.jpa.JpaClientDao"/>
</beans>
